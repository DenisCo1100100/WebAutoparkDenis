@model WebAutopark.Models.OrderItemViewModel
@{
    ViewData["Title"] = "Create Order";
}

<hr />
<h4 class="text-center my-1">CREATE ORDER</h4>
<hr />
<div class="card col-md-7 m-auto">
    <form asp-action="Create" method="post">
        <div class="card-body">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <input type="hidden" asp-for="OrderId" asp-controller="OrderItem"/>
            <div class="form-group text-center">
                <label asp-for="ComponentId"></label>
                <select class="form-select custom-select" asp-for="ComponentId">
                    @foreach (var component in ViewBag.Components)
                    {
                        <option value="@component.ComponentId">@component.Name</option>
                    }
                </select>
            </div>
            <div class="form-group text-center">
                <label asp-for="Quantity"></label>
                <input asp-for="Quantity" class="form-control form-control-sm" value="1"/>
                <span asp-validation-for="Quantity" />
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </div>
    </form>
</div>