@model WebAutopark.Models.VehicleTypeViewModel

@{
    ViewData["Title"] = "Create VehicleType";
}
<div class="card col-md-7 m-auto">
    <div class="card-header">
        <h2 class="mb-2 text-center">Create vehicle type</h2>
    </div>
    <div class="card-body">
        <form method="post" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label ml-md-1"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaxCoefficient" class="control-label ml-md-1"></label>
                <input asp-for="TaxCoefficient" class="form-control"/>
                <span asp-validation-for="TaxCoefficient" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index">Back to List</a>
</div>