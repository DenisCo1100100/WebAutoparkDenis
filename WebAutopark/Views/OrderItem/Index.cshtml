@model IEnumerable<WebAutopark.Models.OrderItemViewModel>

@{
    ViewData["Title"] = "OrderItemInfo";
}

<hr />
<h4 class="text-center my-1">ORDER ITEM INFO</h4>
<hr />
<table class="table table-striped table-borderless table-sm">
    <thead class="thead-light">
        <tr>
            <th>
                OrderId
            </th>
            <th>
                OrderItemId
            </th>
            <th>
                ComponentId
            </th>
            <th>
                ComponentName
            </th>
            <th>
                Quantity
            </th>
        </tr>
    </thead>
    <tbody>
       @foreach (var item in Model)
        {
           <tr>
               <td>
                   @item.OrderId
               </td>
               <td>
                   @item.OrderItemId
               </td>
               <td>
                   @item.ComponentId
               </td>
               <td>
                   @item.Component.Name
               </td>
               <td>    
                   @item.Quantity
               </td>
           </tr>
        }
    </tbody>
</table>

<div class="form-group text-center">    
    <a asp-controller="Order" asp-action="Index">Back to orders list</a>
</div>
