@model IEnumerable<WebAutopark.Models.VehicleTypeViewModel>

@{
    ViewData["Title"] = "ViewType list";
}

<hr />
<h4 class="text-center my-1">VEHICLE TYPES LIST</h4>
<hr />
<table class="table table-striped table-borderless table-sm">
    <thead class="thead-light">
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                TaxCoefficient
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.VehicleTypeId
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.TaxCoefficient
                </td>
                <td class="form-group text-right">
                    <a asp-controller="VehicleType" asp-action="Update" asp-route-id="@item.VehicleTypeId">Update</a>
                    <a asp-controller="VehicleType" asp-action="Delete" asp-route-id="@item.VehicleTypeId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p class="form-group text-center">
    <a class="btn btn-outline-primary" asp-controller="VehicleType" asp-action="Create">Add Vehicle Type</a>
</p> 