@model IEnumerable<WebAutopark.Models.ComponentViewModel>

@{
    ViewData["Title"] = "ViewComponents";
}

<hr />
<h4 class="text-center my-1">COMPONENTS LIST</h4>
<hr />
<table class="table table-striped table-borderless table-sm">
    <thead class="thead-light">
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.ComponentId
                </td>
                <td>
                    @item.Name
                </td>
                <td class="form-group text-right">
                    <a asp-controller="Component" asp-action="Update" asp-route-id="@item.ComponentId">Update</a> |
                    <a asp-controller="Component" asp-action="Delete" asp-route-id="@item.ComponentId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p class="form-group text-center">
    <a class="btn btn-outline-primary" asp-controller="Component" asp-action="Create">Add Component</a>
</p>